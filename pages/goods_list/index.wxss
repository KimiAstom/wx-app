/* pages/goods_list/index.wxss */
.item_container {
  display: flex;
  width: 100%;
  height: 220rpx;
  border-bottom: 1px solid #999;
}

.item_image {
  display: flex;
  flex: 2;
  justify-content: center;
  align-items: center;
}

.item_image image {
  width: 83%;
}

.item_detail {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  flex: 4;
}

.item_message {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.item_detail .item_price {
  color: var(--themeColor);
  font-size: 32rpx;
}